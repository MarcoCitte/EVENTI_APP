<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:padding="2sp">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewFavorite"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:src="@drawable/ic_baseline_favorite_border_24" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewCalendar"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginStart="8sp"
                android:src="@drawable/ic_baseline_edit_calendar_24" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imageViewShare"
                android:layout_width="24sp"
                android:layout_height="24sp"
                android:layout_marginStart="8sp"
                android:src="@drawable/ic_baseline_share_24" />

        </LinearLayout>

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="200sp"
            android:layout_marginTop="10sp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_my_events"
            android:visibility="gone" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-20sp"
                    android:paddingTop="16dp"
                    android:paddingBottom="8dp"
                    android:text="Titolo dell'evento"
                    android:textColor="@color/colorPrimary"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_category"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="-20sp"
                    android:paddingBottom="8dp"
                    android:text="Categoria dell' evento"
                    android:textAllCaps="true"
                    android:textColor="@color/colorAccent"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="10sp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_calendar_today_24" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/event_date"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorTextPrimary"
                        android:layout_marginStart="30sp"
                        android:layout_weight="1"
                        android:lineSpacingExtra="-20sp"
                        android:text="Data dell'evento"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30sp"
                    android:layout_marginTop="20sp"
                    android:orientation="horizontal">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_baseline_place_24" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/event_place"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="30sp"
                        android:layout_weight="1"
                        android:textColor="@color/colorTextPrimary"
                        android:lineSpacingExtra="-20sp"
                        android:text="Place"
                        android:textSize="18sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/event_address"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85sp"
                    android:layout_marginTop="2sp"
                    android:lineSpacingExtra="-20sp"
                    android:text="Address"
                    android:textSize="15sp" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/phoneNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="85sp"
                    android:layout_marginTop="2sp"
                    android:lineSpacingExtra="-20sp"
                    android:text="PHONE NUMBER"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="14sp" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10sp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/showInfoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10sp"
                        android:lineSpacingExtra="-20sp"
                        android:text="Info"
                        android:textColor="@color/colorTextPrimary"
                        android:textAllCaps="true"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/event_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5sp"
                        android:lineSpacingExtra="-20sp"
                        android:text="@string/description"
                        android:textSize="17sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5sp"
                    android:orientation="vertical">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/forMoreInfoTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:autoLink="web"
                        android:lineSpacingExtra="-20sp"
                        android:linksClickable="true"
                        android:textColor="@color/colorTextPrimary"
                        android:text="@string/for_more_information" />


                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/sourceTV"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="2sp"
                        android:autoLink="web"
                        android:lineSpacingExtra="-20sp"
                        android:linksClickable="true"
                        android:text="source"
                        android:textColor="@color/colorButton" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:paddingBottom="8dp">


                </LinearLayout>


                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/otherDatesTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="-20sp"
                    android:text="Other dates of the event"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:id="@+id/otherDatesLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/otherHoursTextView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:lineSpacingExtra="-20sp"
                    android:text="@string/movie_times"
                    android:visibility="gone" />

                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="5dp"
                    android:scrollbars="horizontal">

                    <LinearLayout
                        android:id="@+id/otherHoursLayout"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="horizontal" />
                </HorizontalScrollView>


            </LinearLayout>
        </RelativeLayout>

        <com.google.android.gms.maps.MapView
            android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="300sp"
            android:layout_marginTop="16sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/event_address2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10sp"
            android:maxLines="3"
            android:lineSpacingExtra="-20sp"
            android:textSize="20sp"
            android:textColor="@color/colorTextPrimary"
            android:text="Address"
            tools:ignore="HardcodedText" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:background="@color/colorBackground"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/category_events_TV"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:lineSpacingExtra="-20sp"
                android:paddingTop="16sp"
                android:textColor="@color/colorTextSecondary"
                android:paddingBottom="8sp"
                android:text="@string/similar_events"
                android:textSize="20sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <View
                android:id="@+id/line"
                android:layout_width="match_parent"
                android:layout_height="1sp"
                android:visibility="gone"
                android:background="@color/colorTextPrimary" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerview_events"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:scrollbars="none"
                android:visibility="gone"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/place_events" />

            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </LinearLayout>


    </LinearLayout>
</androidx.core.widget.NestedScrollView>